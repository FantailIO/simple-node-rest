{
  "name": "simple-node-rest",
  "version": "1.0.0",
  "description": " A simple Node REST Client and Server",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "watch": "nodemon src/index.js",
    "watch-sass": "nodemon -w html/scss -x 'npm run-script sass'",
    "sass": "node-sass html/scss -o html/css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "verbose": true,
    "ext": "html css scss js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FantailIO/simple-node-rest.git"
  },
  "author": "Adam Knight",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FantailIO/simple-node-rest/issues"
  },
  "homepage": "https://github.com/FantailIO/simple-node-rest#readme",
  "dependencies": {
    "express": "^4.16.4",
    "node-fetch": "^2.3.0",
    "zipkin": "^0.14.3",
    "zipkin-context-cls": "^0.14.2",
    "zipkin-instrumentation-express": "^0.14.3",
    "zipkin-instrumentation-fetch": "^0.14.3",
    "zipkin-transport-http": "^0.14.3"
  },
  "devDependencies": {
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.7"
  }
}
